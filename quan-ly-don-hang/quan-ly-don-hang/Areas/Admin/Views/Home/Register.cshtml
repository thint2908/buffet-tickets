
@{
    ViewBag.Title = "Register";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">
    <link rel="icon" href="../images/favicon.ico">

    <title>Registration Page</title>

    <!-- Vendors Style-->
    <link rel="stylesheet" href="~/Content/Admin/assets/css/vendors_css.css">

    <!-- Style-->
    <link rel="stylesheet" href="~/Content/Admin/assets/css/style.css">
    <link rel="stylesheet" href="~/Content/Admin/assets/css/skin_color.css">

</head>

<body class="hold-transition theme-primary bg-img">

    <div class="container h-p100">
        <div class="row align-items-center justify-content-md-center h-p100">

            <div class="col-12">
                <div class="row justify-content-center g-0">
                    <div class="col-lg-5 col-md-5 col-12">
                        <div class="bg-white rounded10 shadow-lg">
                            <div class="content-top-agile p-20 pb-0">
                                <h2 class="text-primary">Get started with Us</h2>
                                <p class="mb-0">Register a new membership</p>
                            </div>
                            <div class="p-40">
                                <form id="form-register" method="post">
                                    <div class="form-group">
                                        <div class="input-group mb-3">
                                            <span class="input-group-text bg-transparent"><i class="ti-user"></i></span>
                                            <input id="fullname" name="fullname" type="text" class="form-control ps-15 bg-transparent" placeholder="Họ và Tên">
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="input-group mb-3">
                                            <span class="input-group-text bg-transparent"><i class="ti-email"></i></span>
                                            <input id="email" name="email" type="email" class="form-control ps-15 bg-transparent" placeholder="Email">
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="input-group mb-3">
                                            <span class="input-group-text bg-transparent"><i class="ti-email"></i></span>
                                            <input id="phone" name="phone" type="tel" class="form-control ps-15 bg-transparent" placeholder="Số điện thoại">
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="input-group mb-3">
                                            <span class="input-group-text bg-transparent"><i class="ti-email"></i></span>
                                            <input id="dob" name="dob" type="date" class="form-control ps-15 bg-transparent" placeholder="Ngày sinh">
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="input-group mb-3">
                                            <span class="input-group-text bg-transparent"><i class="ti-lock"></i></span>
                                            <input id="password" name="password" type="password" class="form-control ps-15 bg-transparent" placeholder="Mật khẩu">
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="input-group mb-3">
                                            <span class="input-group-text bg-transparent"><i class="ti-lock"></i></span>
                                            <input name="confirm_password" type="password" class="form-control ps-15 bg-transparent" placeholder="Nhập lại mật khẩu">
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-12">
                                            <div class="checkbox">
                                                <input name="term" type="checkbox" id="basic_checkbox_1">
                                                <label for="basic_checkbox_1">I agree to the <a href="#" class="text-warning"><b>Terms</b></a></label>
                                            </div>
                                        </div>
                                        <!-- /.col -->
                                        <div class="col-12 text-center">
                                            <button id="btn-register" type="submit" class="btn btn-info margin-top-10">SIGN IN</button>
                                        </div>
                                        <!-- /.col -->
                                    </div>
                                    <p id="fullname-msg" class="text-danger"></p>
                                    <p id="email-msg" class="text-danger"></p>
                                    <p id="phone-msg" class="text-danger"></p>
                                    <p id="dob-msg" class="text-danger"></p>
                                    <p id="password-msg" class="text-danger"></p>
                                    <p id="confirm_password-msg" class="text-danger"></p>
                                    <p id="term-msg" class="text-danger"></p>
                                    <p id="register-msg" class="text-success"></p>
                                </form>
                                <div class="text-center">
                                    <p class="mt-15 mb-0">Already have an account?<a href="Login" class="text-danger ms-5"> Sign In</a></p>
                                </div>
                            </div>
                        </div>

                        <div class="text-center">
                            <p class="mt-20 text-white">- Register With -</p>
                            <p class="gap-items-2 mb-20">
                                <a class="btn btn-social-icon btn-round btn-facebook" href="#"><i class="fa fa-facebook"></i></a>
                                <a class="btn btn-social-icon btn-round btn-twitter" href="#"><i class="fa fa-twitter"></i></a>
                                <a class="btn btn-social-icon btn-round btn-instagram" href="#"><i class="fa fa-instagram"></i></a>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


    <!-- Vendor JS -->
    <script src="~/Content/Admin/assets/js/vendors.min.js"></script>
    <script src="~/Content/Admin/assets/js/pages/chat-popup.js"></script>
    <script src="~/Content/Admin/assets/icons/feather-icons/feather.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.4/jquery.min.js"></script>
    <script src="~/Content/Admin/assets/js/main/register.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation@1.19.5/dist/jquery.validate.min.js"></script>



</body>
</html>


